<!--pages/setting/grxx/index.wxml-->
<view>
  <cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">个人信息</view>
  </cu-custom>

  <view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}}">
  <view class="cu-item {{menuArrow?'arrow':''}}">
      <view class="content cu-form-group margin-top">
        <text class="text-grey">头像</text>
        <view class="userinfo cu-avatar radius">
         <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
         <block wx:else>
           <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
         </block>
         </view>
      </view>
  </view>

  <view class="cu-item {{menuArrow?'arrow':''}}">
      <view class="content cu-form-group margin-top">
        <text class="text-grey">昵称</text>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
  </view>

  <view class="cu-item {{menuArrow?'arrow':''}}">
      <view class="content cu-form-group margin-top">
        <text class="text-grey">性别</text>
        <text class="userinfo-gender">{{userInfo.gender}}</text>
      </view>
  </view>

  <!-- <view class="cu-item {{menuArrow?'arrow':''}}">
      <view class="content cu-form-group margin-top">
        <text class="text-grey">微信号</text>
      </view>
  </view> -->

  <view class="cu-item {{menuArrow?'arrow':''}}">
      <view class="content cu-form-group margin-top">
        <text class="text-grey">更多</text>
      </view>
  </view>
  </view>
</view>