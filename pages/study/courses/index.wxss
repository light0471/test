/* pages/study/courses/index.wxss */

.scroll_view {
  height: 40rpx;
  margin-left: 0px;
  padding-top: 10rpx;
  font-size: 30rpx;
  font-weight: 550;
  white-space: nowrap;
  color: rgb(250, 50, 0);
  animation: myfirst 8s linear infinite;
}

@keyframes myfirst {
  0% {
    margin-left: 550rpx;
  }

  100% {
    margin-left: -1000rpx;
    margin-left: 100rpx;
  }
}

.scroll_view_border {
  position: relative;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
  height: 100rpx;
  overflow: hidden;
  align-content: center;
}
