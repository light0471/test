<basics location='{{location}}' wx:if="{{PageCur=='basics'}}"></basics>
<study wx:if="{{PageCur=='study'}}"></study>
<living wx:if="{{PageCur=='living'}}"></living>
<about wx:if="{{PageCur=='about'}}"></about>
<view class="cu-bar tabbar bg-white shadow foot">
  <view class="action" bindtap="NavChange" data-cur="basics">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/basics{{PageCur=='basics'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='basics'?'text-green':'text-gray'}}">首页</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="study">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/study{{PageCur=='study'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='study'?'text-green':'text-gray'}}">学习</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="living">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/living{{PageCur=='living'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='living'?'text-green':'text-gray'}}">生活</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="about">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/about{{PageCur=='about'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='about'?'text-green':'text-gray'}}">我的</view>
  </view>
</view>